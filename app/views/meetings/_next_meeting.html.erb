<div id="meeting" class="box">
	<h2 class="title">Next Meeting</h2>
	<div class="content"> 

		<% if meeting = Meeting.next_meeting %>
      
			<h3>Date</h3>
			<%= meeting.start_at.to_s(:medium_day) %><br/>
			<%= meeting.start_at.to_s(:time) %> - 
			<%= meeting.end_at.to_s(:time) %>

			<br/><br/>
			<h3>Topic</h3>
			<%= meeting.description %>

			<br/><br/>
			<h3>Location</h3>
			<%= format_address_for_display(meeting.location) %>
			<br/>
			<% link_to "http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=#{format_address_for_map_url(meeting.location)}&ie=UTF8&hq=&hnear=#{format_address_for_map_url(meeting.location)}&z=13" do %>
		    <%= image_tag "http://maps.google.com/maps/api/staticmap?center=#{format_address_for_map_url(meeting.location)}&zoom=12&size=165x165&maptype=roadmap&sensor=false&markers=color:red|label:R|#{CGI::escape(meeting.location)}&sensor=false&key=#{GOOGLE_MAPS_KEY}" %>
		  <% end %>
		<% else %>
			We're sorry, but meeting information could not be retrieved from Google Calendar,
			please try again later.
		<% end %>
	
	</div>
</div>
<!-- end #next-meeting -->
